{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd backend && npm install && cd .. && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd backend && npm start",
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 3
  },
  "environment": {
    "NODE_ENV": "production"
  }
}